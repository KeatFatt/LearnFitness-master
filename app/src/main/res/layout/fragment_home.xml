<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.woo.learnfitness.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/homelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/imagePictureView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_account_box_black_24dp"
            android:layout_marginStart="12dp"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="@string/textViewUserName"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteY="50dp" />

        <ImageButton
            android:id="@+id/favourite"
            android:layout_width="60dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/lovefavourite"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/userName"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/rating"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/userName"
            app:layout_constraintRight_toLeftOf="@+id/favourite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/like" />

        <VideoView
            android:id="@+id/videoView2"
            android:layout_width="360dp"
            android:layout_height="154dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
